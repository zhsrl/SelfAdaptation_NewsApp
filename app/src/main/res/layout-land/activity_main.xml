            android:layout_width="370dp"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/fragment_detail_container"
                android:name="com.e.selfadaptation.fragment.NewsDetailFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>



    </LinearLayout>




